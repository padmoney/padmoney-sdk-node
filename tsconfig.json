{
  "compilerOptions": {
    "types": [
      "jest"
    ],
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "dom",
      "es5",
      "es6"
    ],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
